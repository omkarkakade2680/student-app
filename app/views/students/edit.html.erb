<% provide(:title, "Edit student") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
       <% if @student.errors.any? %> 
            <h2>Errors : </h2>
            <ul>  
                <% @student.errors.full_messages.each do|message| %>
                   <li><%= message %></li>
                <% end %>
            </ul>
      <% end %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :gender %>
      <%= f.radio_button :gender, 'Male' %> Male
      <%= f.radio_button :gender, 'female' %> female</br>

       <%= f.label :address %>
      <%= f.text_area :address %>

      <%= f.label :Country %>
      <%= f.select :country, [['India','India'],['Pakistan','Pakistan'],['Canada','Canada']] %>

      <%= f.label :passward %>
      <%= f.password_field :passward %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

   
  </div>
</div>